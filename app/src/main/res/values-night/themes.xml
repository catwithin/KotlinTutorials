<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KotlinTutorials" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


<!--  Green theme for Tips Calculator  -->
    <style name="Theme.TipsCalculator" parent="Theme.KotlinTutorials">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorSecondaryVariant">@color/blue_light</item>


<!--  TODO: can we somehow avoid repeating these styles?? (is there include for styles/themes??)
     -->
        <!--  Material styled components applied across all the components of the app (in this
        case, TipsCalculator Activity only)  -->
        <!-- For text input fields -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <!-- For radio buttons -->
        <item name="radioButtonStyle">@style/Widget.TipsCalculator.CompoundButton.RadioButton</item>
        <!-- For switches -->
        <item name="switchStyle">@style/Widget.TipsCalculator.CompoundButton.Switch</item>
    </style>

    <!-- Cupcake night theme -->
    <style name="Theme.Cupcake" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_400</item>
        <item name="colorPrimaryVariant">@color/pink_950</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_400</item>
        <item name="colorSecondaryVariant">@color/purple_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Radio buttons. -->
        <item name="radioButtonStyle">@style/Widget.Cupcake.CompoundButton.RadioButton</item>
        <!-- Text appearance style. -->
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Cupcake.Subtitle1</item>
    </style>
</resources>
