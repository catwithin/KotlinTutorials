<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RollingDiceActivity">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/androidparty"
        android:id="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"
        android:importantForAccessibility="no"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:text="@string/hp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rolledNumber"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="34sp"
        android:textColor="#C61212"
        android:fontFamily="@font/audiowide"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="1" />

    <Button
        android:text="@string/roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/roll_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rolledNumber"
        android:textColor="@color/white"
        android:layout_marginTop="32dp" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:id="@+id/diceImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="64dp"
        tools:srcCompat="@drawable/dice_1"
        app:srcCompat="@drawable/dice_1"
        android:contentDescription="@string/rolledDicePlug" />


</androidx.constraintlayout.widget.ConstraintLayout>
